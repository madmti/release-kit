{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Bash Release Kit Configuration",
    "description": "Configuration file for the Bash Release Kit automation tool.",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "description": "Link to the JSON Schema for validation and autocompletion."
        },
        "github": {
            "type": "object",
            "description": "GitHub related configuration settings.",
            "properties": {
                "enable": {
                    "type": "boolean",
                    "description": "Indicates whether GitHub integration is enabled."
                }
            },
            "required": ["enable"]
        },
        "commitTypes": {
            "type": "array",
            "description": "Define custom behavior for commit types (bumping logic and changelog sections).",
            "items": {
                "type": "object",
                "required": ["type"],
                "properties": {
                    "type": {
                        "type": "string",
                        "description": "The commit prefix to match (e.g., 'feat', 'fix', 'perf')."
                    },
                    "section": {
                        "type": "string",
                        "description": "The title to display in the Changelog for this type. If omitted, the type group might be hidden or use a default."
                    },
                    "bump": {
                        "type": "string",
                        "description": "The Semantic Versioning impact of this commit type.",
                        "enum": ["major", "minor", "patch", "none"],
                        "default": "none"
                    },
                    "hidden": {
                        "type": "boolean",
                        "description": "If true, commits of this type will be excluded from the Changelog.",
                        "default": false
                    }
                }
            }
        },
        "targets": {
            "type": "array",
            "description": "List of files to update with the new version.",
            "items": {
                "type": "object",
                "required": ["path", "type"],
                "properties": {
                    "path": {
                        "type": "string",
                        "description": "Path to the file relative to the project root."
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "npm",
                            "json",
                            "text",
                            "python",
                            "custom-regex"
                        ]
                    },
                    "pattern": {
                        "type": "string",
                        "description": "Regex pattern for 'custom-regex' type. Use '%VERSION%' as placeholder for the new version value."
                    }
                }
            }
        },
        "changelog": {
            "type": "object",
            "description": "Changelog generation settings.",
            "properties": {
                "enable": {
                    "type": "boolean",
                    "description": "Indicates whether Changelog generation is enabled.",
                    "default": true
                },
                "output": {
                    "type": "string",
                    "description": "Path where the generated Changelog will be saved.",
                    "default": "CHANGELOG.md"
                }
            },
            "required": ["enable"]
        },
        "floatingTags": {
            "type": "object",
            "description": "Configure automatic updates for floating tags (latest, v1, etc).",
            "properties": {
                "latest": {
                    "type": "boolean",
                    "description": "If true, updates the 'latest' tag to point to the new release.",
                    "default": false
                },
                "majors": {
                    "type": "boolean",
                    "description": "If true, updates the major version tag (e.g., v1) to point to the new release.",
                    "default": false
                }
            },
            "required": []
        }
    },
    "required": []
}
